<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="Tadpole"></style>

    <style name="Tadpole.LauncherPage">
        <item name="android:paddingBottom">@dimen/launcher_page_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/launcher_page_padding_left</item>
        <item name="android:paddingRight">@dimen/launcher_page_padding_right</item>
        <item name="android:paddingTop">@dimen/launcher_page_padding_top</item>
    </style>

    <style name="Tadpole.TopBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/top_bar_size</item>
        <item name="android:background">@color/weibosdk_text_num_gray</item>
    </style>

    <!--  -->
    <style name="Tadpole.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">hello world</item>
    </style>

    <style name="Tadpole.ImageButton.Launcher" parent="Tadpole.ImageButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/launcher_page_padding_bottom</item>
    </style>

    <style name="Tadpole.ImageButton.TopBar" parent="Tadpole.ImageButton">
        <item name="android:layout_width">@dimen/top_bar_size</item>
        <item name="android:layout_height">@dimen/top_bar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextAppearance.Small" parent="Tadpole">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Medium" parent="Tadpole">
        <item name="android:textSize">14.7sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Large" parent="Tadpole">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Tadpole.Animation.Activity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Tadpole.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="Tadpole.Dialog.Loading" parent="Tadpole.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog"></style>

    <style name="Tadpole.Dialog.ContextMenu" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Tadpole.Dialog.ContextMenu.Anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>