<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageItemBg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small" >

    <org.tadpoleweibo.widget.AsyncRoundImageView
        android:id="@+id/asyncimgview_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@color/weibosdk_dialog_title_blue" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small" >

        <TextView
            android:id="@+id/txtview_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="代震军"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/simple_grey" />

        <TextView
            android:id="@+id/txtview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/simple_grey_trans44"
            android:text="dksjfkdjskfjdksjfkdjakfjdka;jfk;sjadkf;jdsak;jf;ksjfksdjkfjdskfjkdsjfkldsjfkdsj"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/simple_black" />

        <org.tadpoleweibo.widget.AsyncRoundImageView
            android:id="@+id/asyncimgview_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_marginTop="@dimen/padding_small"
            android:contentDescription="XXX"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</LinearLayout>